<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/base_dimen_size_dp_8"
    app:cardCornerRadius="@dimen/dp_4"
    app:cardElevation="@dimen/dp_4">

    <com.mcxtzhang.swipemenulib.SwipeMenuLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        app:leftSwipe="false"
        app:swipeEnable="true">

        <FrameLayout
            android:id="@+id/content_item_city_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_sweet_card_header_gradient">

            <TextView
                android:id="@+id/tv_city_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/base_dimen_size_dp_16"
                android:text="北京"
                android:textColor="@color/colorTextorIcon"
                android:textSize="@dimen/base_dimen_size_sp_20" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="@dimen/base_dimen_size_dp_8">

                <ImageView
                    android:id="@+id/tv_city_weather_icon"
                    android:layout_width="@dimen/base_dimen_size_dp_32"
                    android:layout_height="@dimen/base_dimen_size_dp_32"
                    android:layout_margin="@dimen/base_dimen_size_dp_8"
                    android:tint="@color/colorTextorIcon" />

                <LinearLayout
                    android:layout_width="@dimen/base_dimen_size_dp_56"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_city_temperature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorTextorIcon"
                        android:textSize="@dimen/base_dimen_size_sp_14" />

                    <TextView
                        android:id="@+id/tv_city_weather"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/base_dimen_size_dp_2"
                        android:textColor="@color/colorTextorIcon"
                        android:textSize="@dimen/base_dimen_size_sp_14" />
                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

        <RelativeLayout
            android:layout_width="48dp"
            android:layout_height="88dp"
            android:layout_gravity="left"
            android:background="@color/colorAccent">

            <ImageView
                android:id="@+id/imgv_city_list_delete"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_delete_forever_white" />
        </RelativeLayout>

    </com.mcxtzhang.swipemenulib.SwipeMenuLayout>
</androidx.cardview.widget.CardView>