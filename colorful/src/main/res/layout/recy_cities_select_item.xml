<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_recy_item"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_city_select_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_dimen_size_dp_16"
        android:textColor="@color/colorSecondaryText"
        android:textSize="@dimen/base_dimen_size_sp_12" />

    <View
        android:id="@+id/view_city_selected"
        android:layout_width="@dimen/base_dimen_size_dp_24"
        android:layout_height="@dimen/base_dimen_size_dp_2"
        android:textColor="@color/colorSecondaryText"
        android:layout_marginTop="@dimen/base_dimen_size_dp_8"
        android:layout_marginBottom="@dimen/base_dimen_size_dp_16" />

</LinearLayout>