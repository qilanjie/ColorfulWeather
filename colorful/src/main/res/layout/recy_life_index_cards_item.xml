<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/LifeIndexCardStyle"
    app:cardCornerRadius="@dimen/base_dimen_radius_dp_8"
    app:cardElevation="@dimen/base_dimen_size_dp_4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:padding="@dimen/base_dimen_size_dp_8"
        android:background="@drawable/ripple_recy_item"
        android:focusable="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/base_dimen_size_dp_8"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgv_life_index_icon"
                android:layout_width="@dimen/base_dimen_size_dp_32"
                android:layout_height="@dimen/base_dimen_size_dp_32" />

            <TextView
                android:id="@+id/tv_life_index_type"
                style="@style/LifeIndexCardTextStyle" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/base_dimen_size_dp_16"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_life_index_value"
                style="@style/LifeIndexCardInfoTextStyle" />

            <TextView
                android:id="@+id/tv_life_index_content"
                style="@style/LifeIndexCardSuggestTextStyle" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>